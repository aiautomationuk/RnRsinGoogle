# ── OpenAI ────────────────────────────────────────────────────────────────────
OPENAI_API_KEY=your_openai_api_key
OPENAI_ASSISTANT_ID=your_openai_assistant_id

# ── Database ───────────────────────────────────────────────────────────────────
# MySQL (cPanel):  mysql://user:password@localhost:3306/dbname
# PostgreSQL:      postgresql://user:password@localhost:5432/dbname
DATABASE_URL=mysql://cpanel_user:password@localhost:3306/cpanel_dbname

# ── Flask ──────────────────────────────────────────────────────────────────────
SECRET_KEY=change_me_to_a_long_random_string

# ── Admin protection for /imap/* endpoints ────────────────────────────────────
# Set a strong secret. Pass as X-Admin-Secret header or ?secret= query param.
ADMIN_SECRET=change_me_to_a_strong_secret

# ── Email account (auto-seeded into DB on first start) ────────────────────────
IMAP_HOST=mail.yourdomain.com
IMAP_PORT=993
IMAP_USERNAME=you@yourdomain.com
IMAP_PASSWORD=your_email_password
IMAP_FOLDER=INBOX

SMTP_HOST=mail.yourdomain.com
SMTP_PORT=465
SMTP_USERNAME=you@yourdomain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=you@yourdomain.com

# ── Polling ────────────────────────────────────────────────────────────────────
POLL_INTERVAL_SECONDS=180
# Set to false on cPanel — polling is handled by a cron job instead
RUN_POLLING=false

# ── Optional: CC important/emergency emails to another address ────────────────
EMERGENCY_CC_EMAIL=
EMERGENCY_CC_LEVEL=important
